{
  "include": ["./sources/**/*"],
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./build/cjs",
    "baseUrl": "./sources",
    "rootDir": "./sources",
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES5",
    "lib": [
      "ES2020",
      "DOM"
    ]
  }
}
